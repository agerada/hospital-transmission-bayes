@article{debosckerAgentbasedModelSimulate2021,
  title = {An Agent-Based Model to Simulate the Transmission of Vancomycin-Resistant Enterococci According Different Prevention and Control Measures},
  author = {Deboscker, Stéphanie and Séverac, François and Gaudart, Jean and Ménard, Céline and Meyer, Nicolas and Lavigne, Thierry},
  date = {2021-07},
  journaltitle = {Infection Control \& Hospital Epidemiology},
  shortjournal = {Infect. Control Hosp. Epidemiol.},
  volume = {42},
  number = {7},
  pages = {857--863},
  issn = {0899-823X, 1559-6834},
  doi = {10.1017/ice.2020.1308},
  url = {https://www.cambridge.org/core/product/identifier/S0899823X20013082/type/journal_article},
  urldate = {2024-12-06},
  abstract = {Abstract                            Objective:               Despite the existence of various levels of infection prevention and control (IPC) measures aimed at limiting the transmission of vancomycin-resistant enterococci (VRE) in hospitals, these measures are sometimes difficult to implement. Using an agent-based model (ABM), we simulated the transmission of VRE within and between 3 care units according to different IPC measures.                                         Methods:               The ABM was modelled on short-stay medical wards, represented by 2 conventional care units and 1 intensive care unit. The scenarios consisted of the simulation of various compliance rates of caregivers with regard to hand hygiene (HH) in different contexts of IPC measures: (1) standard precautions for all patients, (2) additional contact precautions for VRE-carrier patients, (3) geographical cohorting of carrier patients, and (4) creation of an isolation unit with dedicated staff.                                         Results:               With {$<$}50\% HH compliance, the dissemination of VRE was not adequately controlled. With 80\% compliance for all patients (ie, standard precautions scenario), there were no secondary VRE cases in 50\% of the simulations, which represented the best scenario. A more realistic rate, 60\% HH compliance for all patients, revealed interesting results. Implementing an isolation unit was effective only if the level of HH compliance was low. Patient cohorting was less effective.                                         Conclusions:               The present ABM showed that while contact precautions, geographic cohorting, and an isolation unit may represent good complements to standard precautions, they may theoretically not be necessary if HH is followed at a high level of compliance.},
  langid = {english},
  file = {/Users/agerada/Library/Mobile Documents/com~apple~CloudDocs/Zotero/Journal Article/Deboscker et al_2021_An agent-based model to simulate the transmission of vancomycin-resistant.pdf}
