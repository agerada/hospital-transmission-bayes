@article{durazziModellingAntimicrobialResistance2023,
  title = {Modelling Antimicrobial Resistance Transmission to Guide Personalized Antimicrobial Stewardship Interventions and Infection Control Policies in Healthcare Setting: A Pilot Study},
  shorttitle = {Modelling Antimicrobial Resistance Transmission to Guide Personalized Antimicrobial Stewardship Interventions and Infection Control Policies in Healthcare Setting},
  author = {Durazzi, Francesco and Pezzani, Maria Diletta and Arieti, Fabiana and Simonetti, Omar and Canziani, Lorenzo Maria and Carrara, Elena and Barbato, Lorenzo and Onorati, Francesco and Remondini, Daniel and Tacconelli, Evelina},
